@model ABCVehicleShowroom.Models.modelUser

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Edit</h1>
                    </div>
                    <div class="col-6">
                        <div class="float-right pt-1">
                            <input type="submit" value="Save" class="btn btn-primary btn-sm" />
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Admin/User/Index" class="text-white"><i class="fas fa-arrow-circle-left"></i>&nbsp; Back</a>
                            </button>
                        </div>
                    </div>
                </div>

            </div><!-- /.container-fluid -->
        </section>
        <!-- Main content -->
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-9">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ID)
                            @Html.HiddenFor(model => model.img)
                            @Html.HiddenFor(model => model.created_at)
                            @Html.HiddenFor(model => model.created_by)
                            <div class="form-group">
                                <lable for="name">Name</lable>

                                @Html.EditorFor(model => model.fullname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.fullname, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <lable for="name">User Name</lable>
                                @Html.TextAreaFor(model => model.username, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })

                            </div>


                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label>Status</label>
                                <select class="form-control" name="Status">
                                    <option value="1">Display</option>
                                    <option value="2">Hide</option>

                                </select>
                                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Access Right</label>
                                <select class="form-control" name="Access">
                                    <option value="0">User</option>
                                    <option value="1">Admin</option>
                                    <option value="2">Employee</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.access, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Gender</label>
                                <select class="form-control" name="Gender">
                                    <option value="Nam">Male</option>
                                    <option value="Nữ">Female</option>
                                    <option value="Khác">Other</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Image</label>
                                <img src="~/Public/Library/images/user/@Model.img" alt="Alternate Text" width="100" class="d-block mx-auto" />
                                <input type="file" name="Img" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
}