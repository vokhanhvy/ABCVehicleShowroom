@model IEnumerable<ABCVehicleShowroom.Models.modelOrderdetail>
@{
    var cus = @ViewBag.customer;
    ViewBag.Title = "Orderdetail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Order Management</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Orders</a></li>
                        <li class="breadcrumb-item active">List</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-12">
            <!-- /.card -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-8">
                            Order Management
                        </div>
                        <div class="col-4">
                            <div class="float-right pt-1">
                                @Html.Partial("_Message")
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card">
                    <div class="row">
                        <div class="  col col-md-6 ">
                            <div class="card-header bg-secondary"><h3>Name</h3></div>
                            <table class="table table-striped table-bordered dt-responsive nowrap">
                                <thead>
                                    <tr>
                                        <th width="20%">Id</th>
                                        <th width="20%">Name</th>

                                        <th width="20%">Quantity</th>
                                        <th width="20%">Total</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        long sum = 0;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        sum = sum + (long)item.Amount;
                                        <tr>
                                            <td> @item.Id</td>
                                            <td>@item.ProductId</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Amount.ToString("N0") VND</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="  border-bottom  col col-md-6 ">
                            <div class="card-header bg-secondary"><h3>Customer Info</h3></div>
                            <table class="table table-striped table-bordered dt-responsive nowrap">
                                <tbody>

                                    <tr class="border-top">
                                        <td class="pb-3 " style="font-weight: bold;">Name: </td>
                                        <td class="pb-3 pl-5">@cus.DeliveryName</td>
                                    </tr>
                                    <tr class="border-top">
                                        <td class="pb-3" style="font-weight: bold;">Address:</td>
                                        <td class="pb-3 pl-5">@cus.DeliveryAddress</td>
                                    </tr>
                                    <tr class="border-top">
                                        <td class="pb-3" style=" font-weight: bold;">Phone:</td>
                                        <td class="pb-3 pl-5">@cus.DeliveryPhone</td>
                                    </tr>
                                    <tr class="border-top">
                                        <td class="pb-3" style=" font-weight: bold;">Email: </td>
                                        <td class="pb-3 pl-5">@cus.DeliveryEmail</td>
                                    </tr>
                                    <tr>
                                        <td class="pb-3" style=" font-weight: bold;">Payment method: </td>
                                        <td>
                                            @cus.DeliveryPaymentMethod  @if (cus.StatusPayment == 1)
                                            {
                                                <br />
                                                <span class="text-success">Done </span> }
                                            else
                                            {
                                                <br />
                                                <span class="text-danger">Pending </span>
                                            }
                                        </td>

                                    </tr>
                                    <tr class="border-top">
                                        <td class="pb-3" style=" font-weight: bold;">Total:</td>
                                        <td class="pb-3 pl-5"><span class="text-cam font-weight-bold">@sum.ToString("N0") $</span> <p class="text-danger"> Free Shipping</p></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<script>
    $("#order").addClass("active");
</script>

