@model List<ABCVehicleShowroom.Models.CartItem>

@{ 
    var Stt = 1;
}
<div class="wrap-header-cart js-panel-cart">
    <div class="s-full js-hide-cart"></div>

    <div class="header-cart flex-col-l p-l-65 p-r-25">
        <div class="header-cart-title flex-w flex-sb-m p-b-8">
            <span class="mtext-103 cl2">
                Your Cart
            </span>

            <div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-cart">
                <i class="zmdi zmdi-close"></i>
            </div>
        </div>

        @if (Model.Count() == 0)
        {
            <div class="header-cart-content flex-w js-pscroll">
                <ul class="header-cart-wrapitem w-full">
                </ul>

                <div class="w-full">
                    <div class="header-cart-total w-full p-tb-40">
                        Your cart is empty
                    </div>

                    <div class="header-cart-buttons flex-w w-full">


                        <a href="~/" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
                            Let's go shopping!
                        </a>
                    </div>
                </div>
            </div>
        }
        else
        {
    <div class="header-cart-content flex-w js-pscroll">
        <ul class="header-cart-wrapitem w-full">
            @{ float sum = 0; }
            @foreach (var iten in Model)
            {
                int sale = (int)iten.product.Price_sale;
                float price = ((int)iten.product.Price - (int)iten.product.Price / 100 * (int)sale);
                float price1 = ((int)iten.product.Price - (int)iten.product.Price / 100 * (int)sale) * (iten.quantity);
                float priveNsale = (int)iten.product.Price * iten.quantity;
                if (sale > 0)
                {
                    sum += ((int)iten.product.Price * (int)iten.quantity);
                }
                else
                {
                    sum += (int)iten.product.Price * (int)iten.quantity;
                }
                <li class="header-cart-item flex-w flex-t m-b-12">
                    <div class="header-cart-item-img">
                        <img src="~/Public/Library/images/Product/@iten.product.Img" alt="IMG">
                    </div>

                    <div class="header-cart-item-txt p-t-8">
                        <a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
                            @iten.product.Name
                        </a>

                        <span class="header-cart-item-info">
                            @iten.product.Price.ToString("N0") đ X  @iten.quantity
                        </span>
                    </div>
                </li>
            }

        </ul>

        <div class="w-full">
            <div class="header-cart-total w-full p-tb-40">
                Total: @sum.ToString("N0") $
            </div>

            <div class="header-cart-buttons flex-w w-full">
                
                <a href="javascript:void(0)" onclick="thanhtoan()" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
                    Checkout
                </a>
            </div>
        </div>
    </div>
        }
            
        
    </div>
</div>