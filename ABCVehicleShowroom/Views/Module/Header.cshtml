@*@model IEnumerable<ABCVehicleShowroom.Models.modelMenu>*@
<header>
    <!-- Header desktop -->
    <div class="container-menu-desktop">
        <!-- Topbar -->


        <div class="wrap-menu-desktop">
            <nav class="limiter-menu-desktop container navbar ownmenu">

                <!-- Logo desktop -->
                <a href="~/" class="logo">

                    <img src="~/Public/images/logo-showroom.png"  width="190px;" height="350px;">
                </a>

                <!-- Menu desktop -->
                <div class="menu-desktop">
                    <ul class="nav">
                        <li class="active"> <a href="~/">Home </a> </li>
                        <!-- MEGA MENU -->
                        @if (Session["User_Id"] == null)
                        {
                            <li> <a href="~/dang-ky">Register </a> </li>
                            <li> <a href="~/login">Login </a> </li>
                        }
                        <li> <a th:href="#">Contact </a> </li>
                        @if (Session["User_Id"] != null)
                        {
                            <li class="dropdown user-acc">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"><i class="fa fa-user"></i> </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <h6>HELLO!  @Session["User_Name"].ToString()</h6>
                                    </li>
                                    <li><a href="~/logout">LOG OUT</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <div class="wrap-icon-header flex-w flex-r-m nav-right">

                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
                            <i class="zmdi zmdi-search"></i>
                        </div>

                        @Html.Action("Quantity", "Module")

                        @*<a href="#" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti" data-notify="0">
                            <i class="zmdi zmdi-favorite-outline"></i>
                        </a>*@
                    </div>
                </div>
            </nav>
        </div>
    </div>



    <!-- Modal Search -->
    <div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
        <div class="container-search-header">
            <button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
                <img src="~/Public/user/images/icons/icon-close2.png" alt="CLOSE">
            </button>
            @using (Html.BeginForm("Search", "Site", FormMethod.Get, new { @class = "wrap-search-header flex-w p-l-15" }))
            {

                <button class="flex-c-m trans-04">
                    <i class="zmdi zmdi-search"></i>
                </button>
                <input class="plh3" type="text" placeholder="Nhập để tìm kiếm" name="key" value="@(Session["keywords"] ?? " ")">
            }
        </div>
    </div>
</header>

