@model IEnumerable<ABCVehicleShowroom.Models.modelPost>
<section class="sec-blog bg0 p-t-60 p-b-90">
    <div class="container">
        <div class="p-b-66">
            <h3 class="ltext-105 cl5 txt-center respon1">
                Bài viết mới nhất
            </h3>
        </div>

        <div class="row">
            @foreach (var row in Model)
            {
                <div class="col-sm-6 col-md-4 p-b-40">
                    <div class="blog-item">
                        <div class="hov-img0">
                            <a href="blog-detail.html">
                                <img src="~/Public/Library/images/Post/@row.Img" alt="@row.Title" width="100px" height="280px">
                            </a>
                        </div>
                        <div class="p-t-15">
                            <div class="stext-107 flex-w p-b-14">
                                <span class="m-r-3">
                                    <span class="cl4">
                                        @String.Format("{0:d/M/yyyy HH:mm:ss}", row.Created_At);
                                    </span>
                                </span>
                            </div>

                            <h4 class="p-b-12">
                                <a href="blog-detail.html" class="mtext-101 cl2 hov-cl1 trans-04">
                                    @row.Title
                                </a>
                            </h4>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</section>